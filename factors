#!/usr/bin/python3
"""Module that factorizes numbers into a product of two smaller numbers."""
from sys import argv

def factorize(value):
    """Print a simple decomposition of an integer > 1 into p * q."""
    if value < 2:
        return
    
    i = 2
    while i <= value // 2:
        if value % i == 0:
            p = i
            q = value // i
            print(f"{value}={p}*{q}")
            return
        i += 1

if len(argv) != 2:
    print("Usage: factors <file>")
    exit(1)

filename = argv[1]
try:
    with open(filename, 'r') as file:
        for line in file:
            value = int(line.strip())
            factorize(value)
except Exception as e:
    print(f"Error: {e}")
    exit(1)
